<!DOCTYPE HTML>
<html>

<head>
  <style>
    #field {
      width: 200px;
      border: 10px groove black;
      background-color: #00FF00;
      position: relative;
    }

    #ball {
      position: absolute;
    }
  </style>
</head>

<body>


  <div id="field">
    <img src="https://en.js.cx/clipart/ball.svg" width="40" height="40" id="ball"> . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .
    . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .
  </div>

<script>
// defining the size of the field
let fieldWidth = field.clientWidth;
let fieldHeight = field.clientHeight;

/* defining the center position for the ball : we remove half of the size of the ball from the center of the field to get the center of the img.
Otherwise the top-left corner of the ball will be in the middle of the field, not its center. */
let ballTop = Math.round((fieldHeight)/2 - ball.offsetHeight/2);
let ballLeft = Math.round((fieldWidth)/2 - ball.offsetWidth/2);

ball.style.top = `${ballTop}px`;
ball.style.left = `${ballLeft}px`;



</script>

</body>

</html>